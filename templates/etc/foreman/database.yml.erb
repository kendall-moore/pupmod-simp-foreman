# File controlled by Puppet. All manual changes will be overwritten.

<% if not @development_database.empty? -%>
development:
  adapter: postgresql
  database: <%= @development_database %>
  username: <%= @db_user %>
  loglevel: <%= @log_level %>
<% end -%>

<% if not @test_database.empty? -%>
# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test:
  adapter: postgresql
  database: <%= @test_database %>
  username: <%= @db_user %>
  loglevel: <%= @log_level %>
<% end -%>

production:
  adapter: postgresql
  database: <%= @production_database %>
  username: <%= @db_user %>
  loglevel: <%= @log_level %>
